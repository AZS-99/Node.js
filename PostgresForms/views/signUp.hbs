{{!-- action refers to app.post('signUp'), not app.get() --}}
<form method="post" action="/signUp">
    <fieldset border="1pt">
        <legend>Sign up</legend>

        <div class="form-group">
            <div class="form-row">
                <div class="col-sm-4">
                    <label for="firstName">First Name</label>
                    <input class="form-control" type="text" name="firstName" id="firstName" placeholder="John" required />
                </div>

                <div class="col-sm-4">
                    <label for="surname">Surname</label>
                    <input class="form-control" type="text" name="surname" id="surname" placeholder="Doe" required />
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="form-row">
                <div class="col-sm-8">
                    <label for="email">Email</label>
                    <input class="form-control" type="email" name="email" id="email" placeholder="example@gmail.com" required />
                </div>
            </div>
        </div>
    </fieldset>

    <button class="btn-primary">Create Account</button>
</form>