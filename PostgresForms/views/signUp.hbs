{{!-- action refers to app.post('signUp'), not app.get() --}}
{{!-- multer doesn't store the image into uploads without enctype --}}
<form method="post" action="/signUp" enctype="multipart/form-data"> 
    <fieldset border="1pt">
        <legend>Sign up</legend>

        <div class="form-group">
            <div class="form-row">
                <div class="col-sm-4">
                    <label for="firstName">First Name</label>
                    <input class="form-control" type="text" name="firstName" id="firstName" placeholder="John" required />
                </div>

                <div class="col-sm-4">
                    <label for="surname">Surname</label>
                    <input class="form-control" type="text" name="surname" id="surname" placeholder="Doe" required />
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="form-row">
                <div class="col-sm-6">
                    <label for="email">Email</label>
                    <input class="form-control" type="email" name="email" id="email" placeholder="example@gmail.com" required />
                </div>
                <div class="col-sm-6">
                    <label for="password">Password</label>
                    <input class="form-control" type="password" name="password" id="password" required />
                </div>
            </div>
        </div>

        <div class="form-group">
            <input class="form-control" type="file" name="profilePic" id="profilePic" />
        </div>
    </fieldset>

    <button class="btn-primary">Create Account</button>
</form>