{{>navbar}}
<form method="POST" action="/signUp" id="signUpForm">

    <div class="form-group row">
        <label class="col-sm-2 col-form-label col-form-label-lg text-center">First Name</label>
        <input type="text" class="col-sm-2 form-control form-control-lg" name="firstName" placeholder="John" required>
        <label class="col-sm-2 col-form-label col-form-label-lg text-center">Surname</label>
        <input type="text" class="col-sm-2 form-control form-control-lg" name="surname" placeholder="Doe" required />
    </div>

    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label col-form-label-lg text-center">Email</label>
        <input type="email" class="form-control form-control-lg col-sm-6" name="email" id="email" placeholder="example@efas.com" required />
        <label class="col-sm-3 col-form-label text-danger" id="emailNotificationLabel"></label>
    </div>

    <div class="form-group row">
        <label for="password" class="col-sm-2 col-form-label col-form-label-lg text-center">Password</label>
        <input type="password" class="form-control form-control-lg col-sm-6" name="password" id="password" required />
    </div>

    <button class="btn btn-primary" id="submitBtn">Submit</button>
</form>

<script src="/public/jquery/signUp.js"></script>