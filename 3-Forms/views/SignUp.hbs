{{!-- method=post and action=/signUp together redirect to app.post(/signUp) on submition --}}
<form method="POST" action="/SignUp">
    <fieldset border=1pt>
        <legend>Sign up</legend>
        <div class="form-group">
            <div class="form-row">
                <div class="col-sm-4">
                    {{!-- 'for' is to connect label to textfield; when you click on it, it gets the cursor to the textfield --}}
                    <label for="firstName">First Name</label>
                    <input class="form-control" type="text" name="firstName" id="firstName" placeholder="John" required /> 
                </div>

                <div class="col-sm-4">
                    <label for="surname">Surname</label>
                    <input class="form-control" type="text" name="surname" id="surname" placeholder="Doe" required />
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="form-row">
                <div class="col-sm-4">
                    <label for="Email">Email</label>
                    <input class="form-control" type="email" name="email" id="email" placeholder="example@martianally.com" required />
                </div>

                <div class="col-sm-4">
                    <label for="password">Password</label>
                    <input class="form-control" type="password" name="password" id="password" required /> 
                </div>
            </div>
        </div>

        <div class="form-group">
            <input class="form-control" type="file" name="profilePic" />
        </div>
    </fieldset>
    <button type="submit bg-danger">Submit</button>
</form>