<form method="post" action="/signUp">
    <div class="form-group">
        <div class="form-row">
            <div class="col-4">
                <label for="firstName">First Name</label>
                <input class="form-control" type="text" name="firstName" id="firstName" placeholder="John" required />
            </div>
            <div class="col-4">
                <label for="surname">Surname</label>
                <input class="form-control" type="text" name="surname" id="surname" placeholder="Doe" required />
            </div>
        </div>
    </div>
    
    <div class="form-group">
        <div class="form-row">
            <div class="col-8">
                <label for="email">Email</label> 
                <input class="form-control" type="text" name="email" id="email" placeholder="example@gmail.com" required />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="form-row">
            <div class="col-8">
                <label for="password">Password</label>
                <input class="form-control" type="password" name="password" id="password" required />
            </div>
        </div>
    </div>
    

    <button class="btn-primary" type="submit">Create Account</button>
    
</form>