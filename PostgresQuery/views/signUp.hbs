<form method="post" action="/signUp" enctype="multipart/form-data">
    <div class="form-group">
        <div class="form-row">
            <div class="col-4">
                <label for="firstName">First Name</label>
                <input class="form-control" type="text" name="firstName" id="firstName" placeholder="John" required/>
            </div>
            <div class="col-4">
                <label for="surname">surname</label>
                <input class="form-control" type="text" name="surname" id="surname" placeholder="Doe" required/>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="form-row">
            <div class="col-4">
                <label for="email">Email</label>
                <input class="form-control" type="text" name="email" id="email" placeholder="example@gmail.com" required />
            </div>

            <div class="col-4">
                <label for="password">Password</label>
                <input class="form-control" type="password" name="password" id="password" required />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="form-row">
            <div class="col-8">
                <input class="form-control" type="file" name="profilePic" />
            </div>
        </div>
    </div>

    <button type="submit" class="btn-primary">Create Member</button>
</form>