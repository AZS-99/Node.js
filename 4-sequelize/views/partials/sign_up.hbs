<form method="POST" action="/sign_up" class="span-6-cols">
        <legend class="lg">Sign up</legend>


        <input type="text" name="first_name" placeholder="First Name" pattern="^[a-zA-Z]{2,25}$" maxlength="25"
            class="br-half-rem lg" />

        <input type="text" name="surname" placeholder="Surname" pattern="^[a-zA-Z]{2,25}$" maxlength="25"
            class="br-half-rem lg" />


        <input type="email" name="email" placeholder="Email Address" pattern="^[\w\.]{2,100}@[a-z0-9]{2,10}\.[a-z]{2,5}$"
            class="span-all-cols br-half-rem lg " />

        <input type="password" name="password" placeholder="Password"
            pattern="^(?=.*[a-z])(?=.*\d)(?=.*[A-Z])[\w@-]{8,30}$" class="span-all-cols br-half-rem lg" />

        <div class="span-all-cols flex justify-space-around">
            <div class="span-2-cols">
                <input type="radio" id="male" name="gender" value="male" />
                <label for="male" class="lg">Male</label>
            </div>

            <div class="span-2-cols">
                <input type="radio" id="female" name="gender" value="female" />
                <label for="female" class="lg">Female</label>
            </div>

            <div class="span-2-cols">
                <input type="radio" id="other" name="gender" value="other" />
                <label for="other" class="lg">Other</label>
            </div>
        </div>

        <div class="span-all-cols flex justify-space-between">
            <div>
                <label for="birthday" class="lg">Date of Birth</label>
                <input type="date" id="birthday" name="birthday" />
            </div>

            <button type="submit" class="lg br-half-rem">Submit</button>
        </div>



    </fieldset>

</form>