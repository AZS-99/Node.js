<div id="sign_up" class="absolute invisible opacity-80 grid-12-20 h-100vh w-100 bg-black">
    <form action="/sign_up" method="POST" class="span-rows-7-15 span-cols-5-9 radius-1rem bg-white flex-col-jCentre gap-half">
        <div class="flex-jEnd">
            <a href="#" class="B-xxlg bg-grey circle">&times;</a>
        </div>
        <div class="flex gap-half">
            <input type="text" name="first_name" placeholder="First Name" pattern="^[a-zA-Z]{2,25}$" maxlength="25"
                class="radius-half xlg grow-1" />
        
            <input type="text" name="surname" placeholder="Surname" pattern="^[a-zA-Z]{2,25}$" maxlength="25"
                class="radius-half xlg grow-1" />
        </div>
        
        <input type="email" name="email" placeholder="Email Address" pattern="^\w{2,100}@[a-z0-9]{2,10}\.[a-z]{2,5}$"
            class="span-all-cols radius-half xlg" />
        
        <input type="password" name="password" placeholder="Password" pattern="^(?=.*[a-z])(?=.*\d)(?=.*[A-Z])[\w@-]{8,30}$"
            class="span-all-cols radius-half xlg" />
        <div class="flex-around">
            <div>
                <input type="radio" id="male" name="gender" value="male" />
                <label for="male" class="xlg">Male</label>
            </div>
        
            <div>
                <input type="radio" id="female" name="gender" value="female" />
                <label for="female" class="xlg">Female</label>
            </div>
        
            <div>
                <input type="radio" id="other" name="gender" value="other" />
                <label for="other" class="xlg">Other</label>
            </div>
        </div>
        

        <div>
            <label for="birthday" class="xlg">Date of Birth</label>
            <input type="date" id="birthday" name="birthday"  /> 
        </div>
        
        <button type="submit" class="xlg radius-half">Submit</button>
    </form>
</div>
